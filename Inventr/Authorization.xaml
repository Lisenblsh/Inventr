<Window x:Class="Inventr.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventr"
        mc:Ignorable="d"
        Title="Authorization" Height="333" Width="255" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBox Name="TBox_Login" HorizontalAlignment="Center" Height="23" Margin="0,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" KeyDown="OnKeyDownHandler"/>
        <PasswordBox Name="PBox_Pass" HorizontalAlignment="Center" Height="23" Margin="0,148,0,0" VerticalAlignment="Top" Width="120" KeyDown="OnKeyDownHandler"/>
        <Button Content="Button" HorizontalAlignment="Center" Margin="0,223,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
